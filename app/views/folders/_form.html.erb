<%= simple_form_for(@folder) do |f| %>
    <%= f.error_notification %>
    <div class="form-inputs">
        <%= f.input :name %>
    </div>
    <div class="form-inputs">
        <%= f.input :creator_id, input_html: {value: current_user.id }  %>
    </div>
    <div class="form-inputs">
        <%= f.input :ancestry, input_html: {value: current_folder.id } %>
    </div>
    <div class="form-actions">
        <%= f.button :submit %>
    </div>
<% end %>