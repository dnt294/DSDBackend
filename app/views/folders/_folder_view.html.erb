<div class="hidden">
    <p id="current_folder"><%= @current_folder.id %></p>    
</div>
<div class="container-fluid padding-2-size">
    <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-2">
            <div class="ui fluid huge vertical menu">
                <%= link_to 'Thư mục của tôi', folders_path, class: 'active teal item'  %>
                <%= link_to 'Được chia sẻ', shared_with_me_folders_path, class: 'item'  %>
                <%# link_to 'Bài học chung', '#', class: 'item'  %>
            </div>
        </div>
        <div class="col-lg-7 col-md-7 col-sm-7">
            <div class="ui big breadcrumb">
                <%= render 'shared/ancestors_breadcrumb', folder: current_folder %>
            </div>
            <div class="ui horizontal divider">Folder</div>
            <div class="row list folders">
                <%= render 'folders_list', folders: @folders, folder_shortcuts: @folder_shortcuts %>
            </div>
            <div class="ui horizontal divider">UpFile</div>
            <div class="row list up_files">
                <%= render 'up_files/up_files_list', up_file_shortcuts: @up_file_shortcuts %>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3">
            <div class="affix chat-zone">
                <%= render current_folder.chat_room %>
            </div>
        </div>
    </div>
</div>
<div class="ui small modal new folder">
    <div class="header">Tạo folder</div>
    <div id="create-folder-form" class="content">
        <%= render 'new_folder_lite_form', folder: @new_folder %>
    </div>
</div>
<div class="ui small modal new up_file">
    <div class="header">Chọn file muốn tải lên.</div>
    <div id="upload-file-form" class="content">
        <%= render 'new_up_file_lite_form', up_file: @new_up_file %>
    </div>
</div>
<div class="ui small modal share-manager">
    <div class="header">Quản lý quyền chia sẻ</div>
    <div class="content">
    </div>
</div>
<div class="ui small modal rename">
    <div class="header">Đặt lại tên</div>
    <div class="content"></div>
</div>
<div class="ui small modal move">
    <div class="header">Di chuyển</div>
    <div class="content"></div>
</div>